source "app/Kconfig"
source "bsp/Kconfig"
source "drivers/Kconfig"
source "mm/Kconfig"

choice
	prompt "Select A Running Target"

	config SELECT_QEMU
		tristate "Select QEMU"
	config SELECT_FPGA
		tristate "Select FPGA"
	config SELECT_VCS
		tristate "Select VCS"
endchoice

choice
	prompt "Select irqchip"

	config SELECT_AIA
		tristate "Select AIA"
	config SELECT_PLIC
		tristate "Select PLIC"
endchoice

choice
	prompt "Select satp mode"

	config SELECT_SV39
		tristate "Select Sv39"
	config SELECT_SV48
		tristate "Select Sv48"
	config SELECT_SV57
		tristate "Select Sv57"
endchoice

config VIRT
	bool "Virt"
	default y
	if VIRT
		source "virt/Kconfig"
	endif

config USER
	bool "User"
	default y

config MYGUEST
	bool "Guest OS bin"
	default y

config MYUSER
	bool "User process bin"
	default y

config ENABLE_MMU
	bool "Enable MMU"
	default y

config SVNAPOT
	bool "Enable svnapot"
	depends on ENABLE_MMU
	depends on SELECT_SV39

config ENABLE_MULTI_TASK
	bool "Enable Multi task"
	default y

config ENABLE_SHELL
	bool "Enable Shell"
	default y
